            t.Nadar();
            t.Color = "Gris con Blanco";
 
            Console.WriteLine(t.Nombre);
            Console.WriteLine(t.NumeroAletas);
            Console.WriteLine(t.Color);

            Delfin d = new Delfin();
            Console.WriteLine("-especimen-");
            Console.WriteLine("- Delfin -");
            Console.WriteLine("-especimen-");
