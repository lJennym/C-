            Console.WriteLine();

            Tiburon t = new Tiburon();
            Console.WriteLine("-especimen--");
            Console.WriteLine("- Tiburon -");
            Console.WriteLine("-especimen--");
            t.Nombre = "Tiburon";
            t.NumeroAletas = 2;
